<div class='center' id='create'>
  <h4>
    <u>Create New Budget</u>
  </h4>

  
    <form action="/users/{{userId}}/budget" method="POST">
      <div class="row">
          <p>Name of Budget</p>
          <input type="text" name="budgetName.name" placeholder="name your budget" />
        </div>
     
      <div class="row">
       
         <p>Name of Expense</p> <input id="expenses" type="text" name='expenses.name'>

        </div>
 
      <div class="row">
  
          <input id="amount" type="number" name='expenses.amount' placeholder="enter amount" required>

        </div>
      </div>
      <div class="row">
        <div class="input-field col s10">
          <input id="incomeType" type="text" name="income.incomeType" placeholder="income stream">
          <label for="income.incomeType">Income Stream</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s10">
          <input id="amount" type="number" name="income.amount" placeholder="income amount">
          <label for="income.amount">Amount of Income Stream</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </form>


  
