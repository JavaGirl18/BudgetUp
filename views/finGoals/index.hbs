<div class="container" id='fingoal'>
    <h3>{{user.name}}'s Financial Goals</h3>
    <img src={{user.pic}} class='circle responsive-img' alt={{this.name}} width='200'>
    <ul>
        {{#each financialGoals}}
        <li>

            <u>
                <h5>My Goal: {{name}}</h5>
            </u>
            <p>
                <span>Goal Amount:</span>{{goalAmount}}</p>
            <p>Current Amount: {{currentAmount}}</p>

            <p>Due Date: {{dueDate}}</p>

            <p>Comments:{{#each comment}}
                <li class=''>{{body}}
                    <p>Posted on: {{date}}</p>
                </li> {{/each}}</p>

            </a>
        </li>
